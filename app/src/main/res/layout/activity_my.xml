<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/my_homepage_bg"
        android:orientation="vertical">

        <com.nuggetsera.widget.ReturnView
            android:id="@+id/tv_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

        </com.nuggetsera.widget.ReturnView>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/iv_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/white"/>

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_below="@id/iv_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Tammy0317"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"/>

                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_gender"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_toRightOf="@id/tv_user_name"
                    android:src="@drawable/my_homepage_gender02"/>

            </RelativeLayout>

            <TextView
                android:layout_below="@id/rl"
                android:id="@+id/tv_user_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:gravity="center_horizontal"
                android:text="ID:1234567"
                android:textColor="#B6B6B7"
                android:textSize="10sp"/>

            <LinearLayout
                android:id="@+id/ll_label_set"
                android:layout_below="@id/tv_user_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/label_button_shape"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:text="标签"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/label_button_shape"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:text="标签"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/label_button_shape"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:text="标签"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"/>


            </LinearLayout>

            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@drawable/ranking_down_shape"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp">

            </RelativeLayout>

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f4f4f4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/ranking_up_shape">


                <RelativeLayout
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_nuggets"
                        android:gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="掘金力"
                        android:textSize="12sp"
                        android:textColor="#b9b9b9"/>

                        <TextView
                            android:layout_marginTop="5dp"
                            android:id="@+id/tv_nuggets_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="200"
                            android:textSize="12sp"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/tv_nuggets_ranking"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ranking_shape"
                            android:text="NO.137"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:paddingRight="5dp"
                            android:paddingLeft="5dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_gold"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今日紫金量"
                        android:textSize="12sp"
                        android:textColor="#b9b9b9"/>

                        <TextView
                            android:id="@+id/tv_gold_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3000"
                            android:layout_marginTop="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tv_gold_ranking"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ranking_shape"
                            android:text="NO.1"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:paddingRight="5dp"
                            android:paddingLeft="5dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_gold_sum"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="紫金总量"
                        android:textSize="12sp"
                        android:textColor="#b9b9b9"/>

                        <TextView
                            android:id="@+id/tv_gold_sum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="666666"
                            android:layout_marginTop="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tv_gold_sum_ranking"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ranking_shape"
                            android:text="NO.12"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:paddingRight="5dp"
                            android:paddingLeft="5dp"/>

                    </LinearLayout>
                </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f4f4f4">

        <LinearLayout
            android:paddingLeft="12dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_personal_data"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人资料"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"/>

                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/arrows04"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f4f4f4">

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl_account_manage"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账号管理"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"/>

                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/arrows04"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f4f4f4">

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl_my_task"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的任务"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"/>

                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/arrows04"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f4f4f4">

        <LinearLayout
            android:paddingLeft="12dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_game_introduction"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="游戏介绍"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"/>

                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/arrows04"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f4f4f4">

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl_version_update"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="版本更新"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"/>

                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_icon01"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/arrows04"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:id="@+id/tv_version_code"
                    android:gravity="center_vertical"
                    android:layout_toLeftOf="@id/iv_icon01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="V1.0"
                    android:textSize="12sp"
                    android:layout_marginRight="5dp"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f4f4f4">

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl_contact_us"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系我们"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"/>

                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_icon02"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/arrows04"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:id="@+id/tv_service_tel"
                    android:gravity="center_vertical"
                    android:layout_toLeftOf="@id/iv_icon02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="400-666-8888"
                    android:textSize="12sp"
                    android:layout_marginRight="5dp"/>

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>